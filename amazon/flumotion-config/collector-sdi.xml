               worker="localhost"
               project="flumotion"
               version="0.9.0.1">
      <property name="username">pMEUjzeXaBJJ</property>
      <property name="socket-path">flu-DUwiBh.socket</property>
      <property name="password">egMLHlXjuUgt</property>
